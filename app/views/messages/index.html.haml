.wrapper
  = render 'groups/index.html.haml'
  .chat
    .header
      .left-header
        .left-header__title as
        %ul.left-header__members
          Member:
          %li.member asas
          %li.member あああああああああああああ
      .right-header
        / = link_to "グループ編集", "edit_user_path", class: "right-header__button" do
        Edit
    .messages.js-messages
      = render 'message'
    .form
      %form#new_message
        %input#message_content.form__message.js-content{:name => "message[content]", :placeholder => "type a message", :type => "text"}/
        .form__mask
          %label.form__mask__image
            %i.fa.fa-picture-o.icon
        %input.form__submit{"data-disable-with" => "Send", :name => "commit", :type => "submit", :value => "Send"}/
