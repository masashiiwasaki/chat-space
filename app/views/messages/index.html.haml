
.wrapper
  .side-bar
    .header
      %h3.header__name
        = current_user.name
      %ul.header__lists
        %li.list
          = link_to new_group_path do
            %i.fa.fa-pencil-square-o.icon
        %li.list
          = link_to edit_user_path do
            %i.fa.fa-cog.icon
    .groups
      = render 'group'
  .chat
    .header
      .left-header
        .left-header__title as
        %ul.left-header__members
          Member:
          %li.member asas
          %li.member あああああああああああああ
      .right-header
        = link_to "グループ編集", "/groups/9542/edit", class: "right-header__button"
          Edit
    .messages.js-messages
      = render 'message'
    .form
      %form#new_message
        %input#message_content.form__message.js-content{:name => "message[content]", :placeholder => "type a message", :type => "text"}/
        .form__mask
          %label.form__mask__image
            %i.fa.fa-picture-o.icon
        %input.form__submit{"data-disable-with" => "Send", :name => "commit", :type => "submit", :value => "Send"}/
